; colors inspried from morhetz/gruvbox
[colors]
red             = ${xrdb:color1:#222}
light-red       = ${xrdb:color9:#222}
green           = ${xrdb:color2:#222}
light-green     = ${xrdb:color10:#222}
yellow          = ${xrdb:color3:#222}
light-yellow    = ${xrdb:color11:#222}
blue            = ${xrdb:color4:#222}
light-blue      = ${xrdb:color12:#222}
purple          = ${xrdb:color5:#222}
light-purple    = ${xrdb:color13:#222}
aqua            = ${xrdb:color6:#222}
light-aqua      = ${xrdb:color14:#222}
gray            = ${xrdb:color7:#222}
light-gray      = ${xrdb:color15:#222}

bg              = ${xrdb:color0:#222}
fg              = ${xrdb:color7:#222}

[bar/main]

;bottom = true

monitor = eDP1
width   = 100%
height  = 24

offset-x = 0
offset-y = 0

background = ${colors.bg}
foreground = ${colors.fg}

separator               = |
separator-foreground    = ${colors.light-gray}

line-size   = 2

spacing             = 1
padding-left        = 1
padding-right       = 1

module-margin-left  = 1
module-margin-right = 1

font-0 = Mononoki Nerd Font:style=Bold:size=12
font-1 = Source Code Pro:style=Semibold:size=12
font-2 = Noto Sans Thai:style=Semibold:size=12
font-3 = Symbols Nerd Font:style=Semibold:size=12

modules-left    = spotify workspaces
modules-center  = date
modules-right   = xkeyboard pulseaudio battery backlight memory cpu

; modules-padding-top = 2
; modules-padding-bottom = 2

wm-restack      = i3

tray-position   = right
tray-margin     = 1
tray-padding    = 1

; Workspaces
[module/workspaces]
type = internal/i3

pin-workspaces  = true
strip-wsnumbers = true
index-sort      = true

format  = <label-state> <label-mode>

label-dimmed-underline = ${colors.bg}
label-underline = ${colors.bg}

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10

;On editing mode (resize for ex)

label-mode                  = %mode% 
label-mode-background       = ${colors.purple}
label-mode-underline        = ${colors.light-purple}
label-mode-padding          = 1
; label-mode-font = 3

label-focused               = %icon%
label-focused-background    = ${colors.aqua}
label-focused-underline     = ${colors.blue}
label-focused-padding       = 1
; label-focused-font = 3

label-unfocused             = %icon%
label-unfocused-foreground  = ${colors.gray}
label-unfocused-padding     = 1
; label-unfocused-font = 3

label-visible               = %icon%
label-visible-background    = ${colors.purple}
label-visible-underline     = ${colors.light-purple}
label-visible-padding       = 1
; label-visible-font = 3

label-urgent                = %icon%
label-urgent-background     = ${colors.orange}
label-urgent-underline      = ${colors.light-orange}
label-urgent-padding        = 1
; label-urgent-font = 3

[module/xkeyboard]
type            = internal/xkeyboard
layout-icon-0   = en
layout-icon-1   = th


[module/cpu]
type                = internal/cpu
interval            = 2
label               =   %percentage%%
label-foreground    = ${colors.aqua}
label-underline	    = ${colors.aqua}

[module/memory]
type                = internal/memory
interval            = 2
label               =   %percentage_used%%
label-foreground    = ${colors.green}
label-underline	    = ${colors.green}


[module/date]
type        = internal/date
date        = %a %d-%m-%y | %H:%M:%S
interval    = 1


[module/pulseaudio]
type                        = internal/pulseaudio
sink                        = alsa_output.pci-0000_12_00.3.analog-stereo

use-ui-max                  = true

interval                    = 5
format-volume               =   <label-volume>
format-volume-foreground    = ${colors.orange}
format-volume-underline     = ${colors.orange}

label-muted                 =   muted
label-muted-foreground      = ${colors.red}
format-muted-underline      = ${colors.red}
click-right                 = pavucontrol


[module/battery]
type                            = internal/battery
battery                         = BAT0
adapter                         = AC0
label-full                      =  full
label-full-foreground           = ${colors.light-green}
label-full-underline		= ${colors.light-green}

format-charging                 = <animation-charging><label-charging>
label-charging                  = %percentage%%
label-charging-foreground       = ${colors.green}
format-charging-underline	= ${colors.green}
animation-charging-0            =  
animation-charging-1            =  
animation-charging-framerate    = 1000


format-discharging              = <animation-discharging><label-discharging>
label-discharging               = %percentage%%
label-discharging-foreground    = ${colors.light-orange}
format-discharging-underline	= ${colors.light-orange}
animation-discharging-0         =  
animation-discharging-1         =  
animation-discharging-framerate = 1000


[module/backlight]
type                = internal/backlight
card                = intel_backlight
label               =   %percentage%%
label-foreground    = ${colors.light-yellow}
label-underline	    = ${colors.light-yellow}


[module/spotify]
type                        = custom/script
interval                    = 1
format-prefix               = "  "
format-prefix-foreground    = ${colors.light-aqua}
format                      = <label>
exec                        = python   ~/.config/polybar/spotify.py  -f '{play_pause} {song} - {artist} - {album}'
format-underline            = ${colors.light-aqua}

